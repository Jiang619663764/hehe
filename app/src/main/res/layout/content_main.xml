<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.leqiang.MainActivity"
    >

    <include
        layout="@layout/layout_toolbar"></include>

    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottom_menu"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_shouye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_marka"
                android:background="@drawable/radio_selector"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="首页"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <RadioButton
                android:id="@+id/rb_zhishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_marka"
                android:background="@drawable/radio_selector"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:text="知识"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <RadioButton
                android:id="@+id/rb_tidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_marka"
                android:background="@drawable/radio_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:text="地图"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <RadioButton
                android:id="@+id/rb_wode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_marka"
                android:background="@drawable/radio_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:text="我的"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
